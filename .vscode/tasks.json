{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Configure Debug Build (library, demo, examples and tools)",
      "command": "../configure --enable-demo --enable-example --enable-tool CXXFLAGS=\"-g -O0\"",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Prepare Build"
      ]
    },
    {
      "type": "shell",
      "label": "Prepare Build",
      "command": "mkdir -p build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Generate IntelliSense info",
      "command": "intercept-build make check",
      "options": {
        "cwd": "${workspaceFolder}/build",
        "env": {
          "SYNDICATE_DATA_PATH": "${workspaceFolder}/test/fixtures"
        }
      },
      "problemMatcher": {
        "base" : "$gcc",
        "fileLocation": ["relative", "${workspaceFolder}/build/demo/opengl"]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Run 'make'",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": {
        "base" : "$gcc",
        "fileLocation": ["relative", "${workspaceFolder}/build/demo/opengl"]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Run 'make check'",
      "command": "make check",
      "options": {
        "cwd": "${workspaceFolder}/build",
        "env": {
          "SYNDICATE_DATA_PATH": "${workspaceFolder}/test/fixtures"
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Run 'make clean'",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}